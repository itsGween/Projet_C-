@model ProjetUa2_ServeursWeb.Models.Produit

@{
    ViewBag.Title = "Créer un Produit";
}

<!DOCTYPE html>
<html>
<head>
    <title class="createProduit">Creer un produit</title>
    <link rel="stylesheet" href="~/css/style.css?v=@DateTime.Now.Ticks" asp-append-version="true">
</head>
<body>
    <h2 class="titreAjout">Ajouter un Produit</h2>

    <form asp-action="Creer" asp-controller="Produit" method="post" enctype="multipart/form-data" class="ajout">
        <label>Nom:</label>
        <input asp-for="Nom" class="form-control" required />

        <label>Prix:</label>
        <input asp-for="Prix" class="form-control" required />

        <label>Description:</label>
        <input asp-for="Description" class="form-control" />

        <label>Stock:</label>
        <input asp-for="Stock" class="form-control" required />

        <label>Image:</label>
        <input type="file" name="ImageFile" class="form-control" />

        <button type="submit" class="btn">Ajouter</button>
    </form>


</body>
</html>




